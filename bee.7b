# build the simple terminal crate
crate  =simterm
crate main=lib
dep_crates=[]
comp opts=[]
crate_src=src${~/~}rust
test file=test
common =..${~/~}simscript${~/~}comm-crate.7b:file
common_test =..${~/~}simscript${~/~}comm-test.7b:file
crate_dir=../rusthub/src/rust${~/~}crates

version=1.05b015
set_env(VERSION,version)
mode=mode:prop
if {
	eq(mode,release) then {
		array(-C,opt-level=3)
		assign(crate opts, ~~)
	}
}

include(common);